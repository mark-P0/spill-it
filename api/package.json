{
  "name": "@spill-it/api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "db:migrate": "npm run db:generate-migrations && npm run db:execute-migrations",
    "db:generate-migrations": "cross-env NODE_ENV=development drizzle-kit generate:pg",
    "db:execute-migrations": "cross-env NODE_ENV=development tsx ./data/migrate.ts",
    "api:start": "npm run api:check && npm run api:preview",
    "api:check": "tsc",
    "api:preview": "cross-env NODE_ENV=production tsx ./bin/www",
    "api:dev": "cross-env NODE_ENV=development tsx --watch ./bin/www"
  },
  "dependencies": {
    "@spill-it/endpoints": "workspace:^",
    "@spill-it/env": "workspace:^",
    "@spill-it/header-auth": "workspace:^",
    "cookie-parser": "~1.4.4",
    "cross-env": "^7.0.3",
    "date-fns": "^3.2.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "express": "~4.16.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "jose": "^5.2.0",
    "morgan": "~1.9.1",
    "pg": "^8.11.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.20.10",
    "express-generator": "^4.16.1",
    "prettier": "^3.1.1"
  }
}
